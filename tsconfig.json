{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "removeComments": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noErrorTruncation": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
